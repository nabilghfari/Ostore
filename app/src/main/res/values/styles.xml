<resources>
    <!-- Base application theme. -->
    <!-- NoActionBar (to remove actionbar) -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">#F5F5F5</item>
    </style>
    <style name="TextStyleTitle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor">#0320C5</item>
        <item name="android:textSize">50dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/death_star</item>
    </style>
    <style name="TextStyleButton" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">25dp</item>
        <item name="android:textColor">#DC143C</item>
    </style>
    <style name="TextStylePurchase" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">10dp</item>
        <item name="android:textColor">#FFEB3B</item>
    </style>
    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">#000000</item>
    </style>
    <style name="MyDialogTheme2" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">#000000</item>
    </style>
    <style name="ButtonTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#FF9800</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

</resources>