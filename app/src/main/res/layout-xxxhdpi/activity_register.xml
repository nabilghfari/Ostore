<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_blue"
    tools:context=".RegisterActivity">

    <LinearLayout
        android:id="@+id/bar1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="#FF9800"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/bannerreg"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                app:srcCompat="@drawable/ic_baseline_arrow_back_24" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="70dp"
                android:layout_marginLeft="10dp"
                app:srcCompat="@drawable/clothes" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="65dp"
                    android:fontFamily="@font/choplin_medium"
                    android:layout_marginLeft="20dp"
                    android:textColor="#000080"
                    android:textStyle="bold"
                    android:textSize="50sp"
                    android:text="OPAKU"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:textColor="#000080"
                    android:textStyle="bold"
                    android:fontFamily="@font/choplin_medium"
                    android:textSize="50sp"
                    android:text="STORE"
                    />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bar2"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#00BCD4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bar1">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:rotation="270"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/half_rect" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:rotation="270"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/half_rect_w" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:rotation="270"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/half_rect" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:rotation="270"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/half_rect_w" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:rotation="270"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/half_rect" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:rotation="270"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/half_rect_w" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/bar3"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="365dp"
        android:background="#00BCD4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bar2">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000080"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:fontFamily="@font/choplin_medium"
            android:textSize="25sp"
            android:text="SIGN UP"/>

        <EditText
            android:id="@+id/fullnamereg"
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:textAlignment="center"
            android:hint="Full Name"
            android:textColor="@color/black"
            android:background="@drawable/text_bg"
            android:inputType="text" />

        <EditText
            android:id="@+id/phonereg"
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:textAlignment="center"
            android:hint="Phone Number"
            android:textColor="@color/black"
            android:background="@drawable/text_bg"
            android:inputType="number" />

        <EditText
            android:id="@+id/locationreg"
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:textAlignment="center"
            android:hint="Location"
            android:textColor="@color/black"
            android:background="@drawable/text_bg"
            android:inputType="text" />

        <EditText
            android:id="@+id/usernamereg"
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:textAlignment="center"
            android:hint="Username"
            android:textColor="@color/black"
            android:background="@drawable/text_bg"
            android:inputType="text" />

        <EditText
            android:id="@+id/emailreg"
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:textAlignment="center"
            android:hint="Email Address"
            android:textColor="@color/black"
            android:background="@drawable/text_bg"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/passwordreg"
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:background="@drawable/text_bg"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/buttonreg"
            android:theme="@style/ButtonTheme"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:background="@drawable/button_bg"
            android:layout_width="wrap_content"
            android:layout_height="43dp"
            android:text="REGISTER" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bar4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00BCD4"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/bar3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_marginStart="50dp"
            app:srcCompat="@drawable/flower_box" />

        <ImageView
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_marginStart="120dp"
            app:srcCompat="@drawable/flower_box" />

    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>